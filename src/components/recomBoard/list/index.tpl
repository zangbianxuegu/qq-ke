<div class="recom-course-item">
	<div class="course-cover">
		<a href="https://ke.qq.com/course/{{courseId}}" target="_blank">
			<img src="{{courseImg}}" alt="{{courseName}}" />
		</a>
	</div>
	<div class="course-info">
		<a href="https://ke.qq.com/course/{{courseId}}" target="_blank">
			<h3 class="course-title">{{courseName}}</h3>
		</a>
		<p class="description">{{description}}</p>
		<div class="teacher-info">
			<img src="{{teacherImg}}" class="teacher-img" alt="">
			<span class="teacher-name">{{teacherName}}</span>
		</div>
		<div class="price-wrap">
			￥{{price}}.00
		</div>
		<div class="lk-btn">
			<a href="https://ke.qq.com/course/{{courseId}}" target="_blank" class="btn-lk">
				<span class="btn-text">立即学习</span>
			</a>
		</div>
	</div>
</div>






